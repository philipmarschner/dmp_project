#!/bin/bash
mkdir -p /tmp/log/urcontrol

# generate the svlogd configuration filr which must be in the log directory
cat <<EOF >/tmp/log/urcontrol/config
# configuration file for urcontrol logging service
# generated by /etc/services/urcontolr/log/run

# maximum size of a log file in bytes (the default is 1MB)
s5000000

# number of log files (the default is 10)
n5
EOF

# start the log daemon
svlogd /tmp/log/urcontrol
